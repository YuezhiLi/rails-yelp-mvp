<h1><%= @restaurant.name %></h1>

<p><%= @restaurant.category %></p>
<p><%= @restaurant.address %></p>
<p><%= link_to "back to index", restaurants_path %></p>
<p><%= link_to "add a review", new_restaurant_review_path(:restaurant_id => @restaurant.id) %></p>
<h2>Reviews</h2>
<% @restaurant.reviews.each do |r| %>
  <p>rating: <%= r.rating %></p>
  <p><%= r.content %></p>
  <p></p>
<% end %>


